<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="softwarefactory.javalessons.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/output"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add a Student"
        android:id="@+id/button_AddStudent"
        android:layout_below="@+id/menu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:onClick="onClickAddStudent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete A Student"
        android:id="@+id/button_DeleteStudent"
        android:layout_below="@+id/button_AddStudent"
        android:layout_centerHorizontal="true"
        android:nestedScrollingEnabled="true"
        android:onClick="onClickDeleteStudent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Print off Students"
        android:id="@+id/button_Print"
        android:layout_below="@+id/button_DeleteStudent"
        android:layout_centerHorizontal="true"
        android:onClick="onClickPrintStudents" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/MainMenu"
        android:id="@+id/menu"
        android:layout_below="@+id/output"
        android:layout_centerHorizontal="true"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/confirmationText"
        android:layout_below="@+id/button_Print"
        android:layout_centerHorizontal="true"
        android:editable="true" />

</RelativeLayout>
